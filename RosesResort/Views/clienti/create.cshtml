@model RosesResort.Models.clienti

@{
    ViewBag.Title = "create";
    
}

<h2>create</h2>
<p class="bg-success text-light">@ViewBag.statoAzione</p>
<p class="bg-danger">@ViewBag.err</p>

<div class="d-flex justify-content-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ">
