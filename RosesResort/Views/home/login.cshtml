@model RosesResort.Models.users

@{
    ViewBag.Title = "login";
}

<h2>login</h2>
@if (ViewBag.error != null)
{
    <div class="bg-danger">@ViewBag.error</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-column ms-auto me-auto align-items-center">
        <div class="form-horizontal w-25 ">
            <h4>Entra Nel Sito </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.IDuser)

            <div class="form-group">
                @Html.LabelFor(model => model.NomeUtente, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomeUtente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeUtente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PasswordDiUser, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PasswordDiUser, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.PasswordDiUser, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ricordami, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.CheckBoxFor(model => model.ricordami, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ricordami, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Entra" class="btn btn-outline-success mt-2" />
                </div>
            </div>
        </div>
    </div>
}
